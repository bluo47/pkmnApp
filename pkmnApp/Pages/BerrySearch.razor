@page "/berrySearch"
@using System.Text.Json
@using System.Text.Json.Serialization
@using PokeApiNet
@using pkmnApp.Data
@inject PokeClient PokeService

<Search searchValue="@this.searchValue" />

<MudContainer>
    <MudText>@berry.Name</MudText>
</MudContainer>

@code {
    string? searchValue;
    string title = "Berry Search";
    Berry berry;

    protected override async Task OnInitializedAsync()
    {
        berry = await PokeService.GetBerryAsync(searchValue);
    }
}